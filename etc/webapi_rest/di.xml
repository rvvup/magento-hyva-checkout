<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Preferences -->
    <preference for="Rvvup\Payments\Hyva\Api\ClearpayAvailabilityInterface"
                type="Rvvup\Payments\Hyva\Model\ClearpayAvailability"/>
    <!-- Currently this services & Data objects are used only on WebAPI context, move to central di.xml if required -->
    <!-- Reset Cart data (items, addresses, payment) -->
    <preference for="Rvvup\Payments\Hyva\Api\CartResetInterface"
                type="Rvvup\Payments\Hyva\Model\CartReset" />
    <preference for="Rvvup\Payments\Hyva\Api\GuestCartResetInterface"
                type="Rvvup\Payments\Hyva\Model\GuestCartReset" />
    <!-- Get Order Payment Actions for logged-in & guest users -->
    <preference for="Rvvup\Payments\Hyva\Api\CustomerPaymentActionsGetInterface"
                type="Rvvup\Payments\Hyva\Model\CustomerPaymentActionsGet" />
    <preference for="Rvvup\Payments\Hyva\Api\GuestPaymentActionsGetInterface"
                type="Rvvup\Payments\Hyva\Model\GuestPaymentActionsGet" />
    <!-- Get Session messages for any user type -->
    <preference for="Rvvup\Payments\Hyva\Api\SessionMessagesGetInterface"
                type="Rvvup\Payments\Hyva\Model\SessionMessagesGet" />
    <!-- Session Message model di -->
    <preference for="Rvvup\Payments\Hyva\Api\Data\SessionMessageInterface"
                type="Rvvup\Payments\Hyva\Model\SessionMessage" />

    <!-- Plugins -->
    <type name ="Magento\Checkout\Api\ShippingInformationManagementInterface">
        <plugin name="Rvvup_Payments::checkout.express_payment_validate_customer_address.plugin"
                type="Rvvup\Payments\Hyva\Plugin\Checkout\ExpressPaymentValidateCustomerAddress"/>
    </type>

    <!-- DI -->
    <type name="Rvvup\Payments\Hyva\Model\SessionMessagesGet">
        <arguments>
            <argument name="logger" xsi:type="object">RvvupLog</argument>
        </arguments>
    </type>
    <type name="Magento\Payment\Helper\Data">
        <plugin name="Rvvup_Payments::loadPaymentMethods" type="Rvvup\Payments\Hyva\Plugin\LoadPaymentMethods"/>
    </type>
    <type name="Rvvup\Payments\Hyva\Plugin\LoadPaymentMethods">
        <arguments>
            <argument name="checkoutSession" xsi:type="object">Magento\Checkout\Model\Session\Proxy</argument>
        </arguments>
    </type>
</config>
