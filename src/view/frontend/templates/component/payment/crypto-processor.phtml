<?php
declare(strict_types=1);

use Magento\Framework\View\Element\Template;
use Magento\Framework\Escaper;

/** @var Template $block */
/** @var Escaper $escaper */
?>

<script>
    (() => {
        window.addEventListener('checkout:payment:method-activate', event => {
            if (event.detail.method !== 'rvvup_CRYPTO') {
                return;
            }

            const component = Magewire.find('<?= $escaper->escapeJs($block->getNameInLayout()) ?>');
            hyvaCheckout.payment.activate('rvvup_CRYPTO', {

                initialize() {
                    component.loadPaymentActions();
                },
                placeOrderViaJs() {
                    return true;
                },

                placeOrder() {
                    window.dispatchEvent(new CustomEvent('rvvup:update:showModal', {
                        detail: {
                            redirectUrl: component.paymentActions.authorization.value
                        }
                    }));
                    component.placeOrder();
                }
            }, document.querySelector('[wire\\:key="rvvup_CRYPTO"].active'));
        });
    })();
</script>
